doctype html
html
    head
        meta(
            charset="utf8"
        )
        meta(
            name="viewport",
            content="width=device-width, user-scalable=yes, initial-scale=1, maximum-scale=2, minimum-scale=1"
        )
        title Cifrado RC4
        link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel='stylesheet', href='css/styles.css')
    body.modal-open
        #modal
            section#box
                .form
                    input(
                        type="text",
                        placeholder="Escribe tu mensaje a cifrar",
                        id="input-message",
                        required
                    )
                    input(
                        type="text",
                        placeholder="Escribe tu clave",
                        id="input-key",
                        required
                    )
                    button#cifrar CIFRAR
        header
            .container
                .vector-clave
                .operations
                    .control
                        button(id="step" class="fa fa-step-forward" aria-hidden="true")
                        button(id="final" class="fa fa-fast-forward" aria-hidden="true")
                        button(id="parar" class="fa fa-stop" aria-hidden="true")
                    .elemento.f#valor-f
        .vector-estado
        script(
            src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"
        )

        script(
            src="js/array.js"
        )
